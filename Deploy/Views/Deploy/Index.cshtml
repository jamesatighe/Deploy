@model IEnumerable<Deploy.Models.Tennant>

@{
    ViewData["Title"] = "Index";
}

<h2>Tennant List</h2>
<div>
    <p>
        Please select the tennant to manage.
    </p>
    <p>
        If the tennant does not already exist please click the new button.
    </p>
</div>
<a asp-action="Create" class="btn btn-success btn-lg">Create New</a>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TennantName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TennantID)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (!string.IsNullOrEmpty(item.TennantName))
                {
                    @Html.ActionLink(item.TennantName, "Deploy", new { Id = item.TennantID })
                }
               
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TennantID)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.TennantID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TennantID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TennantID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
