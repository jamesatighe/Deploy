@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/cobdepbanner.png" alt="ASP.NET" class="img-responsive center-block" />
            <div class="carousel-caption" role="option">
                <p>
                    Deploy customer solutions to Azure.
                    <a asp-action="IndexCount" asp-controller="Tennant"class="btn btn-default">
                        Continue
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/cobautbanner.png" alt="Visual Studio" class="img-responsive center-block" />
            <div class="carousel-caption" role="option">
                <p>
                    Azure Automation for customers.
                    <a class="btn btn-default" href="#">
                        Continue
                    </a>
                </p>
            </div>
        </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Company Resources</h2>
        <p>
            Learn about Cobweb and Vuzion.
        </p>
        <ul>
            <li><a href="https://www.cobweb.com">Cobweb Website</a></li>
            <li><a href="https://www.vuzion.com">Vuzion Website</a></li>
        </ul>
    </div>
    <div class="col-md-6">
        <h2>Deployment Resources</h2>
        <p>
            Find help and support for Azure Deployment scenarios.
        </p>
        <ul>
            <li><a href="https://docs.microsoft.com/en-us/azure/virtual-machines/virtual-machines-windows-sizes">Azure Virtual Machine Sizes</a></li>
            <li><a href="https://docs.microsoft.com/en-us/azure/azure-resource-manager/resource-group-authoring-templates">Authoring Azure Resource Manager templates.</a></li>
        </ul>
    </div>
</div>
