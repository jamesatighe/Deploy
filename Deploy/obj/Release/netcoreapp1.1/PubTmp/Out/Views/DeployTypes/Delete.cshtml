@model Deploy.DAL.DeployType

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete the Deployment?</h3>
<div>
    <h2>@Model.DeployName</h2>
    <hr />
       
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <button type="submit" class="btn btn-danger navbtn" asp-route-id="@Model.DeployTypeID"><span class="glyphicon glyphicon-remove"></span> Delete</button>
            <a asp-action="IndexSelected" asp-route-id="@Model.TennantID" class="btn btn-primary btn-default navbtn"><span class="glyphicon glyphicon-triangle-left"></span> Back</a>
        </div>
    </form>
</div>
