@{
    ViewData["Title"] = "Access Denied";
}

<header>
    <h1 class="text-danger">Access Denied.</h1>
    <p class="text-danger">You do not have access to this resource.</p>
    @foreach (var Claim in User.Claims.ToList())
    {
        <div>@Claim.Type: @Claim.Value</div>
    }
    >/p>
</header>
